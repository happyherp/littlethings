    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Unittest",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test/test_game.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Profile main.py",
            "type": "python",
            "request": "launch",
            "module": "cProfile",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-o",
                "${workspaceFolder}/profile_output.prof",
                "${workspaceFolder}/main.py"
            ]
        }
    ]
}